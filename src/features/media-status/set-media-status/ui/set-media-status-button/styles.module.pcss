.favoriteListButton {
  @apply relative w-full;

  .dropdown {
    @apply bg-slate-200 dark:bg-slate-800 shadow mt-2 rounded overflow-hidden absolute left-0 top-8 w-full z-10 h-0;

    .dropdownItem {
      @apply hover:bg-slate-300 hover:dark:bg-slate-700 dark:hover:text-white py-2 px-2 cursor-pointer transition-colors text-sm;
    }
  }
}
