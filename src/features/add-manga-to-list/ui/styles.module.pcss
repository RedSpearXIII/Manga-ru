.container {
  @apply relative w-full;
  .button {
    @apply h-[35px] flex items-center rounded bg-orange-400 text-white py-2 px-2;
    p {
      @apply ml-0.5 cursor-default;
    }
  }

  .dropdown {
    @apply bg-slate-200 dark:bg-slate-800 shadow mt-2 rounded overflow-hidden absolute left-0 top-8 w-full z-10;

    .dropdownItem {
      @apply hover:bg-orange-400 hover:dark:bg-slate-700 hover:text-white py-1 px-2 cursor-pointer transition-colors;
    }
  }
}
