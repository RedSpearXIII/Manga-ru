.rating {
  @apply flex items-center gap-x-2 px-2 py-1 rounded text-white;
  p {
    @apply text-sm;
  }
  svg {
    @apply text-xl;
  }
}

.red {
  @apply bg-red-500;
  @apply text-red-200;
}
.orange {
  @apply bg-orange-400;
  @apply text-orange-200;
}
.green {
  @apply bg-green-500;
  @apply text-green-200;
}
