.features {
  @apply rounded-xl bg-gray-100 dark:bg-slate-800 max-w-5xl mx-auto pt-8 mt-12;

  h3 {
    @apply text-center;
  }
  p {
    @apply text-center mt-3 text-lg;
  }

  .container {
    @apply grid grid-rows-2 grid-flow-col px-12 gap-12 mt-8;

    .featureBlock {
      @apply flex items-center h-28;
      .featureIcon {
        @apply h-full pr-4;
      }
      .featureTitle {
        @apply text-left dark:text-white text-base;
      }
      .featureDescription {
        @apply text-left text-sm;
      }
    }
  }

  .joinBtn {
    @apply mx-auto block w-fit translate-y-1/2;
  }
}
